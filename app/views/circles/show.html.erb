

<div align="center" id="lesson_plan"> 
  <hr size="20">
  <h1 id="circle_font"> <i> "<%="#{@circle.name}" %>" Active Discussion Circles </i> </h1> 
  <hr size="20">
  <ol id="circle_font">
   <%Comment.where(circle_id: @circle.id, discussion_question: true).each do |x|%>
    <div  >
      <li> <p> <h2 id="circle_font"> <%= link_to "#{x.body}", "/comments/#{x.id}" %> </h2> </p> </li>
    </div>
    <p></p>
    <%end%> 
  </ol>


<% if UserCircle.find_by(user_id: current_user.id, circle_id: @circle.id, teacher: true) %>
  <%=form_tag '/comments', method: :post  do  %>
  <div id="comment_form">
    <textarea rows="3" name="body" id="body" placeholder="Add Question"></textarea>
    <%=hidden_field_tag :user_id, current_user.id%> 
    <%=hidden_field_tag :circle_id, @circle.id %>
    <%=hidden_field_tag :discussion_question, true %>
    <%=submit_tag "Add Discussion Question" %>
   <%end%>
  </div>
<%else%>
  <%nil%> 
<%end%>
</div>


