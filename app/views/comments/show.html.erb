<div align="center"> 
  <h1 class="side_bar_font"> <%= @comment.body %> </h1>
   <%= form_tag "/discussion_comments", method: :post do %>
   <%=text_field_tag :body %> 
   <%=hidden_field_tag :user_id, current_user.id %>
   <%=hidden_field_tag :comment_id, @comment.id %>
   <%=submit_tag "Submit Response" %>
   <%end%>
<p></p>

<% DiscussionComment.where(comment_id: @comment.id).each do |comment|%>
<h6> <%= User.find_by(id: @comment.user_id).email%>: </h6> 
<h6> <%= comment.body %> </h6>
<%end%>

</div>

