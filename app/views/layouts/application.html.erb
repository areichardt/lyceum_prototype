              <li><a href="components-5.html">Columns</a></li>
              <li><a href="components-6.html">Modules & Overlays</a></li>
            </ul>
          </li>
    
          <li class="dropdown">
            <a class="side_bar_font" href="#" class="dropdown-toggle" data-toggle="dropdown">Settings</a>
            <ul class="dropdown-menu" role="menu">
               <li>
                    <li class="dropdown">
                      <h2> <a class="side_bar_font" href="#" class="dropdown-toggle" data-toggle="dropdown">Leave A Circle</a> </h2>
                      <ul class="dropdown-menu" role="menu">
                         <% current_user.circles.each do |circle| %>
                           <% if UserCircle.find_by(user_id: current_user.id, circle_id: circle, teacher: true) != nil %>
                                  <%nil%>
                              <%else%> 
                         <li><%= link_to "Leave #{circle.name}", "/circles/#{circle.id}", method: :patch %> </li>
                              <%end%>
                           <%end%>
                      </ul>
                    </li>
                </li>
                   
                <li>
                    <li class="dropdown">
                      <h2> <a class="side_bar_font" href="#" class="dropdown-toggle" data-toggle="dropdown">Update Profile Pic</a> </h2>
                      <ul class="dropdown-menu" role="menu">
                        <li> <%= form_tag "/pages/#{current_user.id}", method: :post, multipart: true do %>
                        <%= file_field_tag :src %>
                        <%= submit_tag "Submit" %>
                        <%end%>
                        </li>
                      </ul>
                    </li>
                  </li>
            </ul>
          </li>
              <li><p></p></li>
               <li> <font face="cursive"><%= link_to "Sign Out", '/users/sign_out', method: :delete %></font> </li>

              <li> <p></p> </li>
              
            
       
    
        </ul>
      </div>
    
    </nav>
    
